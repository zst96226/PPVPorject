<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.beyondsys.ppv.activity.EstimateValueActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@color/backcol"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/stepCount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计分为&#160;&#160;"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mainFont"/>
        <EditText
            android:id="@+id/stepCount_edt"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textColor="@color/tabColor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="3"
            android:digits="1234567890"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginLeft="5sp"
            android:text="&#160;&#160;个步骤或阶段"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mainFont"/>
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
    <LinearLayout
        android:id="@+id/step1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="vertical"
        android:background="@color/accent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一步："
            android:textColor="@color/mainFont"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="预计最长时间：&#160;"
                android:textColor="@color/mainFont"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:gravity="left"/>
            <EditText
                android:id="@+id/step1_max"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="20"
                android:digits="1234567890"
                android:textColor="@color/tabColor"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:gravity="left"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="&#160;个小时/人"
                android:textColor="@color/mainFont"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:gravity="left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="预计最短时间：&#160;"
                android:textColor="@color/mainFont"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:gravity="left"/>
            <EditText
                android:id="@+id/step1_min"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="10"
                android:digits="1234567890"
                android:textColor="@color/tabColor"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:gravity="left"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="&#160;个小时/人"
                android:textColor="@color/mainFont"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:gravity="left"/>
        </LinearLayout>
