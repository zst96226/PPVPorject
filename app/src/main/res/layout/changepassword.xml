<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backcol"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="重置密码"
        android:textColor="@color/mainFont"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@color/backcol">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@color/White">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_centerVertical="true"
                android:text="@string/oldPassword"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/oldpass_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:layout_marginRight="10sp"
                android:textColor="@color/mainFont"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_centerVertical="true"
                android:text="@string/newPassword"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/newpass_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:layout_marginRight="10sp"
                android:textColor="@color/mainFont"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_centerVertical="true"
                android:text="@string/checkPassword"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/checkpass_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:layout_marginRight="10sp"
                android:textColor="@color/mainFont"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White">
            <Button
                android:id="@+id/positiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50sp"
                android:text="确定"
                android:background="@color/colorAccent"
                android:gravity="center" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50sp"
                android:layout_alignParentRight="true"
                android:text="取消"
                android:background="@color/Gray"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
