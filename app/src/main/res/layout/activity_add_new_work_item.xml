<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.beyondsys.ppv.activity.AddNewWorkItem"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/backcol"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/anwi_back"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/title_back"/>
            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/anw_lab_1"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:textColor="@color/text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/anwi_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/titlt_ok"
                android:layout_margin="7sp"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backcol">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/Add_lab_1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_titlename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/add_lab_2"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_AssignedTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/add_lab_3"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_Head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/add_lab_4"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_Checker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/add_lab_5"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:text="@string/add_lab_6"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"/>
                <EditText
                    android:id="@+id/input_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:maxLines="20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputScore_layout"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="10sp"
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@color/Gray">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/mainFont"
                        android:text="@string/add_lab_7"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="2sp"
                    android:background="@color/White">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:background="@color/Gray"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/mainFont"
                            android:text="xxx分值"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/input_score"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:isScrollContainer="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:orientation="horizontal"
                android:background="@color/White">
                <LinearLayout
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@color/Gray"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/mainFont"
                        android:textSize="12sp"
                        android:text="@string/add_lab_8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText android:id="@+id/input_des"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="false"
                        android:scrollbars="vertical"
                        android:editable="true"
                        android:textSize="12sp"
                        android:focusable="false"
                        android:gravity="top"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
