<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/backcol"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/wid_back"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/title_back"/>
            <ImageView
                android:id="@+id/wid_return"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/title_back"/>
            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/wid_titlt_lab_1"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:textColor="@color/text"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anwi_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu_btn"
                android:layout_margin="7sp"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="9"
        android:orientation="vertical" >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/main_workitem"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:orientation="horizontal"
                    android:background="@color/White"
                    android:layout_marginBottom="1sp">
                    <LinearLayout
                        android:layout_width="80sp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/work_img"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/work_item"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/wid_workname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="30"
                            android:textColor="@color/mainFont"
                            android:text="事务1"
                            android:textSize="15sp"
                            android:layout_marginTop="17.5sp"/>

                        <ImageView
                            android:id="@+id/work_value_img"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10sp"
                            android:src="@drawable/work_value"/>
                        <TextView
                            android:id="@+id/wid_workvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_toRightOf="@+id/work_value_img"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp"
                            android:maxLines="10"/>
                        <TextView
                            android:id="@+id/work_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wi_list_item_text_1"
                            android:layout_toRightOf="@+id/wid_workvalue"
                            android:layout_marginBottom="10sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10sp"/>
                        <ImageView
                            android:id="@+id/work_state_img"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10sp"
                            android:src="@drawable/img_pro"
                            android:layout_toRightOf="@+id/work_state_txt"
                            android:layout_marginLeft="5sp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="22sp"
                                android:layout_height="22sp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/img_starttime"/>
                            <TextView
                                android:id="@+id/starttime_tex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5sp"
                                android:text="2017-1-16"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="22sp"
                                android:layout_height="22sp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/img_endtime"/>
                            <TextView
                                android:id="@+id/endtime_tex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5sp"
                                android:text="2017-1-17"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="25sp"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/wid_show_chid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_down_float"/>
                    </LinearLayout>
                </LinearLayout>
            <RelativeLayout
                android:id="@+id/del_choose_layout"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="@color/White"
                android:layout_marginTop="5sp"
                android:visibility="gone">
                <Button
                    android:id="@+id/del_ok"
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="50sp"
                    android:layout_alignParentLeft="true"
                    android:text="确认删除"
                    android:background="@color/White"/>
                <Button
                    android:id="@+id/del_cancel"
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight= "50sp"
                    android:text="取消删除"
                    android:background="@color/White"/>
            </RelativeLayout>
                <com.example.beyondsys.ppv.tools.ListViewForScrollView
                    android:id="@+id/wid_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="@string/wid_lab_1"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_workname_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="事务1"
                            android:editable="false"
                            android:textColor="@color/blueBut"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="@string/wid_lab_2"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_Assigned2_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="张三"
                            android:drawableRight="@drawable/arrow_down_float"
                            android:textColor="@color/blueBut"
                            android:editable="false"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="@string/wid_lab_3"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_Checker_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="张四"
                            android:drawableRight="@drawable/arrow_down_float"
                            android:textColor="@color/blueBut"
                            android:editable="false"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="负责人："
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_Head_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="张四"
                            android:drawableRight="@drawable/arrow_down_float"
                            android:textColor="@color/blueBut"
                            android:editable="false"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="@string/wid_lab_4"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/wid_Creater_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="张五"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/wid_lab_5"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/wid_CreateTime_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2017-1-16"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/wid_lab_6"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/wid_Modifier_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="张三"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/wid_lab_7"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/wid_ModifyTime_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2017-1-16"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/wid_lab_9"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_Status_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="待做"
                            android:drawableRight="@drawable/arrow_down_float"
                            android:editable="false"
                            android:textColor="@color/blueBut"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="估算价值"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_Value_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="100分"
                            android:editable="false"
                            android:textColor="@color/blueBut"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/White"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/wid_lab_10"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/wid_ClosingTime_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="2017-1-17"
                            android:editable="false"
                            android:textColor="@color/blueBut"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130sp"
                    android:background="@color/White"
                    android:orientation="vertical"
                    android:layout_marginTop="5sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wid_lab_11"
                        android:layout_marginLeft="10sp"/>
                    <EditText
                        android:id="@+id/wid_Description_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:maxLines="5"
                        android:textColor="@color/blueBut"
                        android:layout_margin="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
