<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainPPVActivity"
    android:orientation="vertical"
    android:background="@color/mainFont">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/backcol"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/logo"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:textColor="@color/text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_btn"
                android:layout_margin="7sp"/>

        </LinearLayout>
    </LinearLayout>
    <!-- ViewPage-->
    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/White"/>
    <!--<include layout="@layout/content_main_ppv" />-->
    <!-- 底部导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="@color/backcol">

        <LinearLayout
            android:id="@+id/btn_workitem"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_workitem"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_gravity="center"
                android:layout_marginTop="4sp"
                android:src="@drawable/workitem_no"/>
            <TextView
                android:id="@+id/txt_workitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:text="@string/workitem_txt"
                android:textSize="11sp"
                android:textColor="@color/Gray"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_workvalue"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_workvalue"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_gravity="center"
                android:layout_marginTop="4sp"
                android:src="@drawable/workvalue_no"/>
            <TextView
                android:id="@+id/txt_workvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workvalue_txt"
                android:textSize="11sp"
                android:layout_marginTop="4sp"
                android:textColor="@color/Gray"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_worknone"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_worknone"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_gravity="center"
                android:layout_marginTop="4sp"
                android:src="@drawable/none_no"/>
            <TextView
                android:id="@+id/txt_worknone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worknone_txt"
                android:layout_marginTop="4sp"
                android:textSize="11sp"
                android:textColor="@color/Gray"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_oneself"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_oneself"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_gravity="center"
                android:layout_marginTop="4sp"
                android:src="@drawable/oneself_no"/>
            <TextView
                android:id="@+id/txt_oneself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oneself_txt"
                android:layout_marginTop="4sp"
                android:textSize="11sp"
                android:textColor="@color/Gray"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
